{{!-- burger icon at the top of the page from a picture thats been uploaded --}}
<img src="/assets/burger.png" alt="burger icon" class="row rounded mx-auto d-block" id="image">

{{!-- first row and column with centered title --}}
<div class="row col-md-12 text-center">
  <h1>Eat-Da-Burger!</h1>
</div>

{{!-- made a row with two columns to contain the two types of burgers each populated by the database --}}
<div class="row">
  <div class="col-md-6 text-center">
    <h2>Burgers waiting to be Devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#unless tried}}
            {{> burgers/burger-block eaten=true}}
          {{/unless}}
        {{/each}}
      </ul>
  </div>
  <div class="col-md-6 text-center">
    <h2>You've already tried these burgers....</h2>
      <ul>
        {{#each burgers}}
          {{#if tried}}
            <div class="row">
              <div class="col-md-6">
                <span>{{id}}.{{name}}</span>
              </div>
              <div class="col-md-6">
                Sorry, only one per customer.
              </div>
            </div>
          {{/if}}
        {{/each}}
      </ul>
  </div>
</div>

{{!-- another row with a text input for types of burgers and a submit button. Plus some instructions for the user. --}}
<div class="row col-md-12 text-center">
  <form class="create-form">

    <div class="form-group">
      <label for="bur">Burger Name:</label>
      <input type="text" id="bur" name="name">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>

    <div class="form-group">
      <label for="tried">Enter a burger you want to eat, then click the "Submit" button.</label><br>
    </div>

  </form>
</div>